{% extends 'base.html.twig' %}

{% block title %}Личный кабинет{% endblock %}

{% block main %}
    <div class="container-fluid" id="wrapper_privateOffice">
        <div class="container-fluid container-privateOff">
            <div class="bg-prive_office"></div>
        </div>
        <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 col-12 pr_of-container ml-auto mr-auto">
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 d-flex align-items-center" style="margin-top: 5%">
                    <div class="private_office-img-container">
                        <i class="fa fa-user icon"></i>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12" style="margin-bottom: 5%">
                    {% include '/private_office/_form.html.twig' %}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-12">
                        <h3>Новости</h3>
                    </div>
                </div>
                <hr>
                <div class="container">
                    {% for news in news %}
                        <div class="row" >
                            {% include '/news/news_card.html.twig' %}
                        </div>
                    {% else %}
                        <div class="col-12">
                            <h5>Записи не найдены</h5>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}