{% extends 'base.html.twig' %}

{% block title %}Вход{% endblock %}

{% block main %}
    <div class="container form-auth">
        <div id="container-formLogin" class="card mr-auto ml-auto">
            <form method="post" class="px-4 py-3">

                <div class="login-logo-container">
                    <i class="fa fa-user icon"></i>
                </div>

                <h3 class="login-h3">Авторизация</h3>

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div class="form-group">
                    <label for="inputUsername">Имя пользователя</label>
                    <input type="text" class="form-control" id="exampleDropdownFormEmail1" name="username"
                           id="inputUsername" placeholder="Введите имя пользователя" value="{{ last_username }}" required>
                </div>
                <div class="form-group">
                    <label for="inputPassword">Пароль</label>
                    <input type="password" class="form-control" id="exampleDropdownFormPassword1" name="password"
                           id="inputPassword" placeholder="Введите пароль" required>
                </div>
                <div class="form-check">
                    <input type="checkbox"id="remember_me" class="form-check-input" name="_remember_me">
                    <label class="form-check-label" for="remember_me" style="margin-bottom: 20px;">
                        Запомнить меня
                    </label>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <div style="text-align: center">
                    <button type="submit" class="btn btn-login">Войти</button>
                </div>
            </form>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/register">Пройдити регистацию.</a>
        </div>
    </div>
{% endblock %}