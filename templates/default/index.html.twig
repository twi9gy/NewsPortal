{% extends 'base.html.twig' %}

{% block title %}Новостной портал{% endblock %}

{% block main %}
    <div class="container" id="home_content">
        <div class="row">
            <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12" style="height: 500px">
                <div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for n in newsSlider %}
                            <li data-target="#carouselExampleCaptions" data-slide-to="{{ loop.index0 }}" class="active"></li>
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner">
                        {% for newsField in newsSlider %}
                            {% if loop.first %}
                                <div class="carousel-item active">
                                {% else %}
                                    <div class="carousel-item">
                            {% endif %}
                                {% for news in newsField %}
                                    {% include 'news/news_info_slider.html.twig' %}
                            {% endfor %}
                                    </div>
                        {% endfor %}
                        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12 pl-0 pr-0" >
                <div class="container">
                    <div class="row">
                        {% for news in newsMain %}
                            <div class="col-xl-12 col-lg-12 col-md-6 col-sm-12 col-12 main_news" style="height: 242.5px">
                                <div class="card-news">
                                    {% set vars = {'content':'true'} %}
                                    {% include 'news/news_info.html.twig' with vars %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        {% for newsField in newsAll %}
            <div class="row" style="margin-top: 20px">
                <div class="col-4">
                    <h3>{{ newsField[0].class }}</h3>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-12">
                    <div class="container">
                        {% for news in newsField %}
                            {% if loop.first %}
                                <div class="row">
                                    {% include 'news/news_card.html.twig' %}
                                </div>
                                <div class="row" style="margin-top: 15px">
                            {% else %}
                                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12 pl-0 min_news" >
                                    <div style="height: 300px">
                                        <div class="card-news">
                                            {% set vars = {'content':'false'} %}
                                            {% include 'news/news_info.html.twig' with vars %}
                                        </div>
                                    </div>
                                    <div class="text-center" style="background-color:  #243238;height: 200px;margin-top: 0px">
                                        <div class="pt-4" style="overflow: hidden">
                                            {% include 'news/news_card-content.html.twig' %}
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}